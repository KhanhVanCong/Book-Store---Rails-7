<%= turbo_frame_tag "show_info_current_user" do %>
	<%= form_with(model: current_user,
								url: users_info_path(current_user),
								id: current_user,
								html: { method: :put,
												data: { turbo: true } }) do |f| %>
		<%#= render "users/shared/error_messages", resource: resource %>
		<div class="mb-4">
			<%= f.label :first_name, class: "form-label" %><br/>
			<%= f.text_field :first_name, class: "form-control text-capitalize", autofocus: true %>
		</div>

		<div class="mb-4">
			<%= f.label :last_name, class: "form-label" %><br/>
			<%= f.text_field :last_name, class: "form-control text-capitalize" %>
		</div>

		<div class="d-grid">
			<%= f.submit "Update", class: "btn common__button common__button--no-shadow w-100" %>
		</div>
	<% end %>
<% end %>