<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-3">
    <h1>Authors</h1>
  </div>
  <div class="col-9 text-right">
    <%= link_to "New author", new_cms_author_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div id="cms_authors">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>#</th>
          <th>Avatar</th>
          <th>Name</th>
          <th>Description</th>
          <th>Social Link</th>
          <th>Book count</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @authors.each_with_index do |author, index| %>
          <%= render partial: "cms/authors/author", locals: { author: author, index: index } %>
        <% end %>
        </tbody>
      </table>
      <div class="float-right">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
