<div class="w-50 mx-auto border border-light bg-light p-3 rounded">
  <%= form_with(model: [:cms, author]) do |form| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :facebook_link %>
        <%= form.text_field :facebook_link, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :instagram_link %>
        <%= form.text_field :instagram_link, class: "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :twitter_link %>
        <%= form.text_field :twitter_link, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :google_plus_link %>
        <%= form.text_field :google_plus_link, class: "form-control" %>
      </div>
    </div>

    <div class="custom-file">
      <%= form.file_field :avatar, class: "custom-file-input", direct_upload: true %>
      <label class="custom-file-label">Choose file</label>
    </div>

    <% if author.avatar.attached? %>
      <div class="row mt-3">
        <% if author.avatar.id.present? %>
          <div class="col-4">
            <div class="card text-center">
              <%= image_tag author.avatar.variant(:small), class: "card-img-top", alt: "No Image" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


