<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-3">
    <h1>Categories</h1>
  </div>
  <div class="col-9 text-right">
    <%= link_to "New category", new_cms_category_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div id="cms_categories">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Book count</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each_with_index do |category, index| %>
          <%= render partial: "cms/categories/category", locals: { category: category, index: index } %>
        <% end %>
        </tbody>
      </table>
      <div class="float-right">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
