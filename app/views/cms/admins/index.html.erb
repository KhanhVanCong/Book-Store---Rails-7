<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<div class="row">
  <div class="col-3">
    <h1>Admins</h1>
  </div>
  <div class="col-9 text-right">
    <%= link_to "New admin", new_cms_admin_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div id="cms_tags">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @cms_admins.each_with_index do |admin, index| %>
          <%= render partial: "cms/admins/admin", locals: { admin: admin, index: index } %>
        <% end %>
        </tbody>
      </table>
      <div class="float-right">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
