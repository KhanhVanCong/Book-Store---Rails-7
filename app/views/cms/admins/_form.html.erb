<div class="w-50 mx-auto border border-light bg-light p-3 rounded">
	<p style="color: red"><%= alert %></p>
	<%= form_with(model: [:cms, admin], data: { turbo: false }) do |form| %>
		<div class="form-row">
			<div class="form-group col-md-12">
				<%= form.label :name %>
				<%= form.text_field :name, class: "form-control" %>
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-md-12">
				<%= form.label :email %>
				<%= form.email_field :email, class: "form-control" %>
			</div>
		</div>

		<div class="form-group" data-controller="select2">
			<%= form.label :role %>
			<%= form.select :role,
											options_for_select(Constants::ADMIN_ROLES.map { |role| [role.to_s.titleize, role] },
																				 admin.role),
											{},
											{ class: "js-select2" } %>
		</div>

		<div class="form-group" data-controller="select2">
			<%= form.label :status %>
			<%= form.select :status,
											options_for_select(Constants::ADMIN_STATUS.map { |status| [status.to_s.titleize, status] },
																				 admin.status),
											{},
											{ class: "js-select2" } %>
		</div>

		<div class="form-row">
			<div class="form-group col-md-12">
				<%= form.label :password %>
				<%= form.password_field :password, class: "form-control" %>
			</div>
		</div>

		<div class="text-center mt-3">
			<%= form.submit class: "btn btn-primary" %>
		</div>
	<% end %>
</div>