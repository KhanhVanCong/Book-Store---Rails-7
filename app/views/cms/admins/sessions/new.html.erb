<div class="global-container">
	<div class="card login-form">
		<div class="card-body">
			<h3 class="card-title text-center login-card-title">Log in</h3>
			<div class="card-text">
				<% if notice %>
					<div class="alert alert-info alert-dismissible fade show" role="alert">
						<%= notice %>
					</div>
				<% elsif alert %>
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<%= alert %>
					</div>
				<% end %>
				<%= form_for(resource,
										 as: resource_name,
										 url: session_path(resource_name),
										 class: "login-form", data: { turbo: false }) do |f| %>
					<div class="form-group">
						<%= f.label :email %><br/>
						<%= f.email_field :email, autofocus: true, class: "form-control form-control-sm", required: true %>
					</div>

					<div class="form-group">
						<%= f.label :password %><br/>
						<%= f.password_field :password, class: "form-control form-control-sm", required: true %>
					</div>

					<%= f.submit "Log in", class: "btn btn-primary btn-block login-btn" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

