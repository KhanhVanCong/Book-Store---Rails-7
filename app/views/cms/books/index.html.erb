<p style="color: green"><%= notice %></p>

<div class="row">
	<div class="col-3">
		<h1>Books</h1>
	</div>
	<div class="col-9 text-right">
		<%= link_to "New book", new_cms_book_path, class: "btn btn-primary" %>
	</div>
</div>

<div class="row">
	<div class="col-12">
		<div id="cms_books">
			<table class="table table-striped">
				<thead>
				<tr>
					<th>#</th>
					<th>Image</th>
					<th>Title</th>
					<th>Description</th>
					<th>Price</th>
					<th>Action</th>
				</tr>
				</thead>
				<tbody>
				<% @books.with_attached_images.each_with_index do |book, index| %>
					<%= render partial: "cms/books/book", locals: { book: book, index: index } %>
				<% end %>
				</tbody>
			</table>
			<div class="float-right">
				<%== pagy_bootstrap_nav(@pagy) %>
			</div>
		</div>
	</div>
</div>




